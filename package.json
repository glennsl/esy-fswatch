{
  "version": "0.13.0",
  "buildsInSource": true,
  "build": [
    [
      "bash",
      "-c",
      "#{os == 'windows' ? './build-scripts/prepare-windows.sh' : 'true'}"
    ],
    "find ./ -exec touch -t 200905010101 {} +",
    [
      "./configure",
      "#{os == 'windows' ? '--host=x86_64-w64-mingw32' : ''}",
      "#{os == 'windows' ? '--target=x86_64-w64-mingw32' : ''}",
      "#{os == 'windows' ? 'CFLAGS=\"-DHAVE_WINDOW\"' : ''}",
      "#{os == 'windows' ? 'CXXFLAGS=\"-DHAVE_WINDOWS\"' : ''}",
      "--prefix=$cur__install",
      "--disable-silent-rules",
      "--disable-dependency-tracking"
    ],
    [
      "bash",
      "-c",
      "#{os == 'windows' ? './build-scripts/build-windows.sh' : 'true'}"
    ],
    "make",
    "make install"
  ],
  "install": "make install",
  "buildEnv": {
    "WINDOWS_AVAILABLE": "#{os == 'windows' ? 'yes' : 'no'}",
    "CYGWIN_AVAILABLE": "#{os == 'windows' ? 'yes' : 'no'}"
  },
  "exportedEnv": {
    "FSWATCH_INCLUDE_PATH": {
      "val": "#{self.install / 'include'}",
      "scope": "global"
    },
    "FSWATCH_BIN_PATH": {
      "val": "#{self.install / 'fswatch'}",
      "scope": "global"
    }
  },
  "dependencies": {
    "libtools": "ulrikstrid/esy-libtools#60de5edce4c550c1660ef1b2f861b576cef2f73e",
    "gettext": "esy-packages/esy-gettext#4069a3333a079828afe7ba7935c1b400738d1f72",
    "automake": "ulrikstrid/esy-automake#10779a9ca0cb23e60fa619e1e0b5ed03b9c3e575",
    "autoconf": "esy-packages/esy-autoconf#ea58671a08c7ebf89b0cebd41f4950ca67157b01"
  }
}
