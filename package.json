{
  "source": "https://github.com/emcrisostomo/fswatch/releases/download/1.14.0/fswatch-1.14.0.tar.gz#af74e538e9816f158352078d73844367d1c24a7f",
  "override": {
    "buildsInSource": "_build",
    "build": [
      "find ./ -exec touch -t 200905010101 {} +",
      [
        "bash",
        "-c",
        "#{os == 'windows' ? './build-windows.sh' : 'true'}"
      ],
      [
        "./configure",
        "#{os == 'windows' ? 'CFLAGS=\"-DHAVE_WINDOWS\"' : ''}",
        "#{os == 'windows' ? 'CXXFLAGS=\"-DHAVE_WINDOWS\"' : ''}",
        "--prefix=#{self.install}",
        "--disable-dependency-tracking",
        "--disable-silent-rules"
      ],
      "#{os == 'windows' ? 'mv libtool libtool.bak' : 'true'}",
      "#{os == 'windows' ? 'sed -e \"s;(allow_undefined=)yes;\u0001no;\" libtool.bak > libtool' : 'true'}",
      "#{os == 'windows' ? 'make install-strip' : 'true'}",
      "make"
    ],
    "install": [
      "make install"
    ],
    "exportedEnv": {
      "FSWATCH_INCLUDE_PATH": {
        "val": "#{self.install / 'include'}",
        "scope": "global"
      },
      "FSWATCH_BIN_PATH": {
        "val": "#{self.install / 'fswatch'}",
        "scope": "global"
      }
    }
  }
}
